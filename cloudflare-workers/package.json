{
  "name": "neetlogiq-backend",
  "version": "1.0.0",
  "description": "NEET Logiq backend API using Cloudflare Workers and D1",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create neetlogiq-db",
    "db:migrate": "wrangler d1 migrations apply neetlogiq-db",
    "db:seed": "wrangler d1 execute neetlogiq-db --file=./migrations/seed.sql"
  },
  "dependencies": {
    "itty-cors": "^2.0.0"
  },
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}