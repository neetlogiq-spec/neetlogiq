{
  "name": "neetlogiq-cloudflare-worker",
  "version": "1.0.0",
  "description": "NEET Logiq Cloudflare Worker Backend",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev --local --port 8787",
    "dev:remote": "wrangler dev --remote --port 8787",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:prod": "wrangler deploy --env production",
    "db:create": "wrangler d1 create neetlogiq-db",
    "db:migrate": "wrangler d1 migrations apply neetlogiq-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply neetlogiq-db --remote",
    "db:query": "wrangler d1 execute neetlogiq-db --command",
    "db:backup": "wrangler d1 export neetlogiq-db --output backup.sql",
    "test": "wrangler dev --local --port 8787 --test-scheduled"
  },
  "dependencies": {
    "csv-parse": "^6.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "itty-router": "^4.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "validator": "^13.15.15",
    "xlsx": "^0.18.5",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250903.0",
    "@types/node": "^24.3.0",
    "better-sqlite3": "^12.2.0",
    "eslint": "^9.34.0",
    "hono": "^4.9.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "wrangler": "^4.33.2"
  }
}
