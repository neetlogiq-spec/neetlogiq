{
  "name": "neetlogiq-platform",
  "version": "2.1.0",
  "description": "NEET Logiq - Medical College Search Platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:cloudflare\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:cloudflare": "cd cloudflare/worker && wrangler dev --port 8787 --env development",
    "build": "npm run build:frontend && npm run build:cloudflare",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:cloudflare": "cd cloudflare/worker && wrangler deploy",
    "start": "npm run start:cloudflare",
    "start:backend": "cd backend && npm start",
    "start:cloudflare": "cd cloudflare/worker && wrangler dev --port 8787",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../cloudflare/worker && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules cloudflare/worker/node_modules",
    "setup": "npm run install:all && npm run setup:database",
    "setup:database": "cd cloudflare/worker && wrangler d1 migrations apply neetlogiq-db --local",
    "deploy": "cd cloudflare/worker && wrangler deploy"
  },
  "keywords": [
    "neet",
    "medical",
    "colleges",
    "search",
    "education"
  ],
  "author": "NEET Logiq Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5"
  }
}
